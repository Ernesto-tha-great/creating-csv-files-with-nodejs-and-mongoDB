extends layout

block content
  .container
      .row
        .logo
          h3
           = title
      .row
        .span12
          .mini-layout
            h3 Staff  Listing
             a(href='/exporttocsv' style="margin-left: 60%;") Export to CSV

            table.table.table-bordered
              thead
                tr
                  th name
                  th email
                  th phone number
                  th title
                if products.length
                each item in products
                 tr
                   td #{item['name']}
                   td #{item['email']}
                   td #{item['phone_number']}
                   td #{item['title']}